<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta name="description" content="A pizza creator!">
  <meta name="author" content="Kevin Nolan">

  <link href="https://fonts.googleapis.com/css?family=Catamaran" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <link rel = "stylesheet" href="/stylesheets/style.css">

  <title>Pizza Drop</title>

  <style>
    /* This is page-specific CSS not otherwise handled in style.css*/

    #pizza-frame {
      width: 448px;
      height: 650px;
      top: 5vh;
      margin: auto;
      position:relative;
      padding:0px;
    }

    .menu-frames {
      z-index:1000;
      position: absolute;
      width: 30%;
      max-width: 200px;
      height:100%;
      background-color:rgba(255,220,220,0.5);
      text-align:center;
      border: 2px solid white;
      padding:3px;
    }
    #menu-frame-L {
      top: 0%;
      left: 0%;
    }
    #menu-frame-R {
      top: 0%;
      right: 0%;
    }

    #disp-time {
      background-color:antiquewhite;
      width:40px; height:20px;
      border-radius:20%;
      font-size:3rem;
      padding:0px 5px 0px 5px;
    }
    #help-frame {
      z-index:1000;
      position: absolute;
      top: 40%;
      left: 20%;
      width: 60%;
      background-color:rgba(255,170,100,0.5);
      text-align:center;
      border: 2px solid white;
      border-radius:20%;
      padding:10px;

    }
    #info-btn-frame {
      position:absolute;
      top: 5%;
      right: 5%;
    }
    .btn-link {
      color: #f55;
      font-size:2rem;
    }
    .btn-warning {
      background-color:#f55;
      border-color:white;
    }
    .pomo-row {
      margin:5px;
    }

    .piz { /*All pizza elements*/
      position:absolute;
      margin:0px;
      padding:0px;
    }
    .bkg { /* Dough and platter*/
      z-index:-5;
    }
    .t-base { /*tomato base*/
      bottom:239px; left:28px;
      z-index: 0;
    }
    .rim {
      bottom:213px; left:3px;
      z-index:1;
    }
    .c-base { /*cheese base*/
      bottom:257px; left:45px;
      z-index: 2;
    }
    .topp { /*Toppings*/
      animation: topp-anim 300ms ease-in;
      z-index: 4;
    }
    @keyframes topp-anim {
      from {
        transform:scale(2);
        opacity:0;
      }
    }

    @keyframes vanish {
      to {
        transform:scale(0.1);
        opacity: 0;
      }
    
    }

  </style>

</head>

<body>


<div id="pizza-frame">
  <img src="images/piz_base.svg" class="piz bkg"/>
  <img src="images/piz_base_tom.svg" class="piz t-base"/>
  <img src="images/piz_rim.svg" class="piz rim"/>
  <img src="images/piz_base_cheese.svg" class="piz c-base"/ id="cheese-base">
</div>
<div class="menu-frames" id="menu-frame-L">
  <h3>Meat</h3>
  <input class="toppCB" type = "checkbox" name = "ham" onchange="cBoxChange(this)"> Ham &nbsp;
  <input class="toppCB" type = "checkbox" name = "bacon" onchange="cBoxChange(this)"> Bacon &nbsp;
  <input class="toppCB" type = "checkbox" name = "pepperoni" onchange="cBoxChange(this)"> Pepperoni &nbsp;
  <input class="toppCB" type = "checkbox" name = "salami" onchange="cBoxChange(this)"> Salami &nbsp;
  <input class="toppCB" type = "checkbox" name = "shrimps" onchange="cBoxChange(this)"> Shrimps &nbsp;

  <h3>Veg</h3>
  <input class="toppCB" type = "checkbox" name = "mushrooms" onchange="cBoxChange(this)"> Mushrooms &nbsp;
  <input class="toppCB" type = "checkbox" name = "tomato" onchange="cBoxChange(this)"> Tomato &nbsp;
  <input class="toppCB" type = "checkbox" name = "pineapple" onchange="cBoxChange(this)"> Pineapple &nbsp;
  <input class="toppCB" type = "checkbox" name = "redonion" onchange="cBoxChange(this)"> Red Onion &nbsp;
  <input class="toppCB" type = "checkbox" name = "jalapenos" onchange="cBoxChange(this)"> Jalape√±os &nbsp;
  <input class="toppCB" type = "checkbox" name = "peppers" onchange="cBoxChange(this)"> Peppers &nbsp;
  <input class="toppCB" type = "checkbox" name = "olives" onchange="cBoxChange(this)"> Olives &nbsp;

  <h3>Seasonings</h3>
  <input class="toppCB" type = "checkbox" name = "basil" onchange="cBoxChange(this)"> Basil &nbsp;
  <input class="toppCB" type = "checkbox" name = "parsley" onchange="cBoxChange(this)"> Parsley &nbsp;
  <input class="toppCB" type = "checkbox" name = "groundchili" onchange="cBoxChange(this)"> Ground Chili &nbsp;
  
</div>
<div class="menu-frames" id="menu-frame-R">
  <h3>Classic Favourites</h3>
  <button type="button" onclick="uncheckAll()">Margherita</button> &nbsp;
  <button type="button" onclick='setTopp("hawaiian")'>Hawaiian</button> &nbsp;
  <button type="button" onclick='setTopp("surfnturf")'>Surf n' Turf</button> &nbsp;
  <button type="button" onclick='setTopp("farmhouse")'>Farmhouse</button> &nbsp;
  <button type="button" onclick='setTopp("meatfeast")'>Meat Feast</button> &nbsp;
  <button type="button" onclick='setTopp("vegetarian")'>Vegetarian</button> &nbsp;
  <button type="button" onclick='setTopp("sizzler")'>Sizzler</button> &nbsp;
  <button type="button" onclick='setTopp("supreme")'>Supreme</button> &nbsp;
  <button type="button" onclick='setTopp("vegsupreme")'>Veg Supreme</button> &nbsp;
  <p>Create your favourite pizza then press the button</p>
  <button>Submit</button>
</div>

